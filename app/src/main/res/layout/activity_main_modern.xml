<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Toolbar with hamburger menu and cool title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:titleTextAppearance="@style/CoolTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wai Vault"
            style="@style/CoolTitle"
            android:layout_gravity="center" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Upper Part: Terminal Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TERMINAL OUTPUT"
            android:textColor="@color/lime_accent"
            android:textSize="12sp"
            android:paddingBottom="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="8dp"
            app:strokeColor="@color/lime_primary"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/terminal_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/TerminalText"
                android:padding="12dp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Middle Part: Three Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Scan Vault"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_decrypt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Decrypt"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_encrypt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Encrypt"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Lower Part: Log Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPERATION LOGS"
            android:textColor="@color/lime_accent"
            android:textSize="12sp"
            android:paddingBottom="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="8dp"
            app:strokeColor="@color/lime_primary"
            app:strokeWidth="1dp">

            <ScrollView
                android:id="@+id/log_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/log_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TerminalText"
                    android:padding="12dp" />

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>