<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/card_bg"
        app:title="Wai Vault"
        app:titleTextColor="@color/md_theme_primary"
        android:elevation="6dp"
        app:menu="@menu/main_menu" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:progressTint="@color/md_theme_primary"
        android:indeterminateTint="@color/md_theme_primary"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/card_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/blast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Vault"
                android:textColor="@android:color/black"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:backgroundTint="@color/md_theme_error"
                android:layout_marginBottom="10dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/decrypt_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decrypt Files"
                android:textColor="@android:color/black"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:backgroundTint="#C6A000"
                android:layout_marginBottom="10dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/encrypt_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encrypt Files"
                android:textColor="@android:color/black"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:backgroundTint="@color/md_theme_secondary"
                android:padding="10dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/scroll_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:background="@color/card_bg"
        android:padding="10dp">

        <TextView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs will appear here..."
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp" />
    </ScrollView>
</LinearLayout>
