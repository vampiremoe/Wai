<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <!-- Top AppBar (Material3 style) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/md_theme_surface"
        app:title="Wai Vault"
        app:titleTextColor="@color/md_theme_primary"
        android:elevation="8dp"
        app:navigationIconTint="@color/md_theme_primary" />

    <!-- ProgressBar under AppBar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:progressTint="@color/md_theme_primary"
        android:indeterminateTint="@color/md_theme_primary"
        android:layout_marginBottom="6dp" />

    <!-- Card container with action buttons -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/md_theme_surface">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center">

            <!-- Scan Vault button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/blast"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Vault"
                android:textColor="@color/buttonText"
                android:backgroundTint="@color/md_theme_error"
                android:layout_marginBottom="12dp"
                android:cornerRadius="12dp"
                android:paddingVertical="12dp"/>

            <!-- Decrypt Files button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/decrypt_btn"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decrypt Files"
                android:textColor="@color/buttonText"
                android:backgroundTint="@color/md_theme_primary"
                android:layout_marginBottom="12dp"
                android:cornerRadius="12dp"
                android:paddingVertical="12dp"/>

            <!-- Encrypt Files button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/encrypt_btn"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encrypt Files"
                android:textColor="@color/buttonText"
                android:backgroundTint="@color/md_theme_secondary"
                android:cornerRadius="12dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable logs -->
    <ScrollView
        android:id="@+id/scroll_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:backgroundTint="@color/md_theme_surface"
        android:padding="10dp">

        <TextView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs will appear here..."
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp" />
    </ScrollView>

</LinearLayout>
