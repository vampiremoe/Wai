<resources>
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/lime_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lime_accent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="CoolTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/lime_primary</item>
    </style>

    <style name="TerminalText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/lime_primary</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>